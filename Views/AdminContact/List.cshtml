@model List<RodinaTurkey.Models.Entitiy.Tbl_Contact>
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2 class="m-0 text-dark">İLETİŞİM</h2>
<hr />
<div class="card">
    <div class="card-header">
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                <i class="fas fa-minus"></i>
            </button>
            <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>
    <div class="card-body p-0">
        <table id="tbl1" class="table table-striped projects">
            <thead>
                <tr>
                    <th class="text-center">
                        İSİM
                    </th>
                    <th class="text-center">
                        MAİL
                    </th>
                    <th class="text-center">
                         KONU
                    </th>
                    <th>
                        MESAJ
                    </th>
                    <th>MESAJ TARİHİ</th>
                    <th>İŞLEM</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">
                            @item.Name.ToString()
                        </td>
                        <td class="text-center">
                            <a href="mailto:@item.Mail">@item.Mail</a> 
                        </td>
                        <td class="text-center">
                            @item.Subject
                        </td>
                        <td class="text-center">
                            @item.ContentText
                        </td>
                        <td>@item.Date.Value.ToShortDateString()</td>
                        <td class="project-actions text-center">
                       @Html.ActionLink("SİL", "Delete", new { id = item.ID }, new { @class = "btn btn-danger", @onclick = "return confirm('SİLMEK İSTEDİĞİNİZDEN EMİN MİSİNİZ ?')" })
                       </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script>
    $('#tbl1').DataTable(
        {
            "language": {
                "url": "https://cdn.datatables.net/plug-ins/1.10.20/i18n/Turkish.json"
            }
        }
    );
</script>