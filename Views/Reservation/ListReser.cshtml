@model RodinaTurkey.Models.Entitiy.Tbl_Reservation
<section class="ftco-section ftco-no-pt bg-transparent">
    <div class="row no-gutters">
            <div class="col-md-12" >
                <div class="row no-gutters" style="margin-top: 90px">
                    <div class="col-md-4 d-flex align-items-left">
                        @using (Html.BeginForm("List", "Reservation", FormMethod.Post, new {@class = "request-form ftco-animate bg-primary"}))
                        {
                            <h2>Online Rezervasyon</h2>
                            <hr/>
                            <div class="form-group">
                                <label for="" class="label">Aracın Kiralanacağı Konum</label>
                                @Html.DropDownListFor(x => x.PickupAdressID, (List<SelectListItem>)ViewBag.dgr, new { @class = "btn btn-secondary dropdown-toggle",@style="width: 295px",@required = "" })
                            </div>
                            <div class="form-group">
                                <label for="" class="label">Aracın Bırakılacağı Konum</label>
                                @Html.DropDownListFor(x => x.PickupDropID, (List<SelectListItem>)ViewBag.dgr1, new {  @class = "btn btn-secondary dropdown-toggle", @required = "" })
                            </div>
                            <div class="d-flex">
                                <div class="form-group mr-2">
                                    <label for="" class="label">Kiralanacak Araç</label>
                                    @Html.DropDownListFor(x => x.CarID, (List<SelectListItem>)ViewBag.dgr2, new {  @class = "btn btn-secondary dropdown-toggle", @required = "" })
                                </div>
                            </div>
                            <br/>
                            <div class="form-group">
                                <button type="submit" class="btn btn-secondary py-3 px-4">Rezervasyon İşlemi >></button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
</section>