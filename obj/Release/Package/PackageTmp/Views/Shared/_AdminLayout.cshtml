@using RodinaTurkey.Models.Entitiy
@{ RodinaTurkeyEntities db = new RodinaTurkeyEntities();
    var deger = db.Tbl_Contact.Count();
    var deger2 = db.Tbl_RentContent.Count();
    var arac = db.Tbl_Rentcar.Count();
    var cat = db.Tbl_RentCategory.Count();
    var reze = db.Tbl_Reservation.Count();
}
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>ADMİN İZMİRent A Car</title>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="http://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/dist/css/adminlte.min.css">
    <link href="~/Content/PagedList.css" rel="stylesheet" />
    <link rel="icon" href="~/favicon.ico" type="image/x-icon" />
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>
<body class="hold-transition sidebar-mini">
<div class="wrapper">
    <nav class="main-header navbar navbar-expand navbar-white navbar-light">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
            </li>
        </ul>
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <a class="nav-link" data-widget="control-sidebar" data-slide="true" href="#" role="button">
                    <i class="fas fa-th-large"></i>
                </a>
            </li>
        </ul>
    </nav>
    <aside class="main-sidebar sidebar-dark-primary elevation-4">
        <a href="#" class="brand-link">
            <img src="@db.Tbl_Abouts.FirstOrDefault().CompanyImage" alt="AdminLTE Logo" class="brand-image img-circle elevation-3"
                 style="opacity: .8">
            <span class="brand-text font-weight-light">@db.Tbl_Abouts.FirstOrDefault().CompanyName</span>
        </a>
        <div class="sidebar">
            <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                <div class="image">
                    <img src="@db.Tbl_Abouts.FirstOrDefault().Image" class="img-circle elevation-2" alt="User Image">
                </div>
                <div class="info">
                    <a href="#" class="d-block">@db.Tbl_Abouts.FirstOrDefault().UserName</a>
                </div>
            </div>
            <nav class="mt-2">
                <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                    <li class="nav-item has-treeview">
                        <a href="~/CategoryCar/List/" class="nav-link">
                            <i class="nav-icon fas fa-tachometer-alt"></i>
                            <p>
                                ARAÇ MARKASI
                            </p>
                            <span class="right badge badge-success">@cat</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="~/AdminCar/List/" class="nav-link">
                            <i class="nav-icon fas fa-car"></i>
                            <p>
                                ARAÇLAR
                            </p>
                            <span class="right badge badge-success">@arac</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="~/AdminPickup/List/" class="nav-link">
                            <i class="nav-icon fas fa-location-arrow"></i>
                            <p>
                                KONUM TANIMLA
                            </p>
                        </a>
                    </li>
                    <li class="nav-item has-treeview">
                        <a href="~/AdminRentContent/List/" class="nav-link">
                            <i class="nav-icon fas fa-desktop"></i>
                            <p>
                                YORUMLAR
                            </p>
                            <span class="right badge badge-danger">@deger2</span>
                        </a>
                    </li>
                    <li class="nav-item has-treeview">
                        <a href="~/AdminReservation/List/" class="nav-link">
                            <i class="nav-icon fas fa-blog"></i>
                            <p>
                                REZERVASYON
                            </p>
                            <span class="right badge badge-danger">@reze</span>
                        </a>
                    </li>
                    <li class="nav-item has-treeview">
                        <a href="~/AdminContact/List/" class="nav-link">
                            <i class="nav-icon fas fa-edit"></i>
                            <p>
                                İLETİŞİM & MESAJLAR
                            </p>
                            <span class="right badge badge-danger">@deger</span>
                        </a>
                    </li>
                    <li class="nav-item has-treeview">
                        <a href="~/AdminAbout/List/" class="nav-link">
                            <i class="nav-icon fas fa-laptop-medical"></i>
                            <p>
                                HAKKIMIZDA
                            </p>
                        </a>
                    </li>
                    <li class="nav-item has-treeview">
                        <a href="~/Login/LoginUpdate/" class="nav-link">
                            <i class="nav-icon fas fa-lock"></i>
                            <p>
                                ŞİFRE GÜNCELLE
                            </p>
                        </a>
                    </li>
                    <li class="nav-item has-treeview">
                        <a href="~/Home/List/" class="nav-link">
                            <i class="nav-icon fas fa-book"></i>
                            <p>
                                SİTEYE GİT
                            </p>
                        </a>
                    </li>
                    <li class="nav-item has-treeview">
                        <a href="~/CategoryCar/Logout/" class="nav-link">
                            <i class="nav-icon far fa-plus-square"></i>
                            <p>
                                ÇIKIŞ YAP
                            </p>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </aside>
    <div class="content-wrapper">
        <div class="content">
            <div class="container-fluid">
                <br/>
                @RenderBody()
            </div>
        </div>
    </div>
    <aside class="control-sidebar control-sidebar-dark">
    </aside>

    <footer class="main-footer">
        <strong>Copyright &copy; @DateTime.Now.Year DESIGN BY <a href="https://github.com/dogukankosan" target="_blank">DOĞUKAN KOŞAN</a></strong>
        <div class="float-right d-none d-sm-inline-block">
        </div>
    </footer>
</div>
    <script src="~/AdminLTE-3.0.4/plugins/jquery/jquery.min.js"></script>
    <script src="~/AdminLTE-3.0.4/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/AdminLTE-3.0.4/dist/js/adminlte.js"></script>
    <script src="~/AdminLTE-3.0.4/plugins/chart.js/Chart.min.js"></script>
    <script src="~/AdminLTE-3.0.4/dist/js/demo.js"></script>
    <script src="~/AdminLTE-3.0.4/dist/js/pages/dashboard3.js"></script>
</body>
</html>